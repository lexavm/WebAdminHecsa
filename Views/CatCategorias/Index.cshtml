@model IEnumerable<WebAdminHecsa.Models.CatCategoria>

@{
    ViewData["Title"] = "Categorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">HECSA</li>
        <li class="breadcrumb-item">Información</li>
        <li class="breadcrumb-item">Productos</li>
        <li class="breadcrumb-item">Categorias</li>
        <li class="breadcrumb-item active" aria-current="page">Control de Categorias</li>
    </ol>
</nav>
<p>
    <a id="iNuevo" type="submit" class="btn btn-outline-primary" asp-action="Create" value="Nuevo" title="Nuevo"><i class="fas fa-plus"></i> Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.CategoriaDesc)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.IdMarca)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.MarcaDesc)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.IdEstatusRegistro)
            </th>
            <th style="text-align:center">Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.CategoriaDesc)
            </td>
             <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.IdMarca)
            </td>
             <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.MarcaDesc)
            </td>
             <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
             <td style="text-align:center">
                      @if (item.IdEstatusRegistro == 1)
                    {
                        <i class="fas fa-check-circle" style="font-size: 1em; color: green;"></i>
                    }
                    else
                    {
                        <i class="fas fa-stop-circle" style="font-size: 1em; color: red;"></i>
                    }
            </td>
             <td style="text-align:center">
                <a asp-action="Edit" asp-route-id="@item.IdCategoria">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdCategoria">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCategoria">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script type="text/javascript">
          $(document).ready(function() {
              var v = '@ViewBag.EstatusFlag'
              if (v == 1) {
       document.getElementById("iNuevo").style.visibility="visible";
    } else {
       document.getElementById("iNuevo").style.visibility="hidden";
    }
          });

</script>
}
