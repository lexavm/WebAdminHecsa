@model IEnumerable<WebAdminHecsa.Models.CatProducto>


@{
    ViewData["Title"] = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">HECSA</li>
        <li class="breadcrumb-item">Información</li>
        <li class="breadcrumb-item">Productos</li>
        <li class="breadcrumb-item active" aria-current="page">Control de Productos</li>
    </ol>
</nav>
<p>
    <a id="iNuevo" type="submit" class="btn btn-outline-primary" asp-action="Create" value="Nuevo" title="Nuevo"><i class="fas fa-plus"></i> Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.CodigoInterno)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.CodigoExterno)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.IdMarca)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.MarcaDesc)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.IdCategoria)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.CategoriaDesc)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.DescProducto)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.CantidadMinima)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.CantidadInicial)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.ProductoPrecio)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.PorcentajeGanancia)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.PorcentajeVenta)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.SubCosto)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Costo)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.IdEstatusRegistro)
            </th>
            <th style="text-align:center">Acciones</th>
        </tr>
    </thead>
    <tbody>
                @foreach (var item in Model)
      
         {
                <tr>
                     <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.CodigoInterno)
                    </td>
                     <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.CodigoExterno)
                    </td>
                     <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.IdMarca)
                    </td>
                     <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.MarcaDesc)
                    </td>
                     <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.IdCategoria)
                    </td>
                     <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.CategoriaDesc)
                    </td>
                     <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.DescProducto)
                    </td>
                     <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.CantidadMinima)
                    </td>
                     <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.CantidadInicial)
                    </td>
                     <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.ProductoPrecio)
                    </td>
                     <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.PorcentajeGanancia)
                    </td>
                     <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.PorcentajeVenta)
                    </td>
                     <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.SubCosto)
                    </td>
                     <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.Costo)
                    </td>
                     <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.FechaRegistro)
                    </td>
                     <td style="text-align:center">
                                @if (item.IdEstatusRegistro == 1)
                    {
                        <i class="fas fa-check"style="font-size: 1em; color: green;"></i>
                    }
                    else
                    {
                        <i class="fas fa-times" style="font-size: 1em; color: red;"></i>
                    }
                    </td>
                     <td style="text-align:center">
                        <a asp-action="Edit" asp-route-id="@item.IdProducto" class="btn btn-warning" title="Editar"><i class="far fa-edit"></i></a>
                        <a asp-action="Details" asp-route-id="@item.IdProducto" class="btn btn-info" title="Detalles"><i class="fas fa-toggle-off"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.IdProducto" class="btn btn-danger" title="Desactivar"><i class="fas fa-toggle-off"></i></a>
                    </td>
                </tr>
                }
    </tbody>
</table>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script type="text/javascript">
          $(document).ready(function() {
              var v = '@ViewBag.EstatusFlag'
              if (v == 1) {
       document.getElementById("iNuevo").style.visibility="visible";
    } else {
       document.getElementById("iNuevo").style.visibility="hidden";
    }
          });

</script>
}