@model WebAdminHecsa.Models.TblProveedor

@{
    ViewData["Title"] = "Editar Proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">HECSA</li>
        <li class="breadcrumb-item">Información</li>
        <li class="breadcrumb-item">Empresa</li>
        <li class="breadcrumb-item">Control de Proveedor</li>
        <li class="breadcrumb-item active" aria-current="page">Editar Proveedor</li>
    </ol>
</nav>
<hr />

<div class="row">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="NombreProveedor" class="control-label"></label>
                    <input style="text-transform:uppercase" asp-for="NombreProveedor" class="form-control" />
                    <span asp-validation-for="NombreProveedor" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="GiroComercial" class="control-label"></label>
                    <input style="text-transform:uppercase" asp-for="GiroComercial" class="form-control" />
                    <span asp-validation-for="GiroComercial" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="RFC" class="control-label"></label>
                    <input style="text-transform:uppercase" asp-for="RFC" class="form-control" />
                    <span asp-validation-for="RFC" class="text-danger"></span>
                </div>
            </div>
        </div>
 
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="CorreoElectronico" class="control-label"></label>
                    <input id="iCorreoElectronico" asp-for="CorreoElectronico" class="form-control" type="email"   />
                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Telefono" class="control-label"></label>
                    <input style="text-transform:uppercase" asp-for="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
            </div>
              <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="IdEstatusRegistro" class="control-label"></label>
                    <select id="idEstatusLista" class="form-select" asp-for="IdEstatusRegistro" asp-items="@(new SelectList(ViewBag.ListaEstatus,"IdEstatus","EstatusDesc"))">
                        <option value="">Seleccionar Estatus</option>
                    </select>
                    <span asp-validation-for="IdEstatusRegistro" class="text-danger"></span>
                </div>
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Actualizar" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Regresar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
