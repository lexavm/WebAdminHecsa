@model IEnumerable<WebAdminHecsa.Models.TblEmpresa>

@{
    ViewData["Title"] = "Crear Empresa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">HECSA</li>
        <li class="breadcrumb-item">Información</li>
        <li class="breadcrumb-item">Empresa</li>
        <li class="breadcrumb-item">Control de Empresa</li>
        <li class="breadcrumb-item active" aria-current="page">Crear Empresa</li>
    </ol>
</nav>
<p>
    <a id="iNuevo" type="submit" class="btn btn-outline-primary" asp-action="Create" value="Nuevo" title="Nuevo"><i class="fas fa-plus"></i> Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.NombreEmpresa)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.GiroComercial)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.IdEstatusRegistro)
            </th>
            <th style="text-align:center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                 <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.NombreEmpresa)
                </td>
                 <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.GiroComercial)
                </td>
                 <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.FechaRegistro)
                </td>
                 <td style="text-align:center">
                            @if (item.IdEstatusRegistro == 1)
                    {
                        <i class="fas fa-check"style="font-size: 1em; color: green;"></i>
                    }
                    else
                    {
                        <i class="fas fa-times" style="font-size: 1em; color: red;"></i>
                    }
                </td>
                 <td style="text-align:center">
                    <a asp-action="Edit" asp-route-id="@item.IdEmpresa" class="btn btn-warning" title="Editar"><i class="far fa-edit"></i></a>
                    <a asp-action="Details" asp-route-id="@item.IdEmpresa" class="btn btn-info" title="Detalles"><i class="fas fa-toggle-off"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.IdEmpresa" class="btn btn-danger" title="Desactivar"><i class="fas fa-toggle-off"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script type="text/javascript">
          $(document).ready(function() {
              var v = '@ViewBag.EstatusFlag'
              if (v == 1) {
       document.getElementById("iNuevo").style.visibility="visible";
    } else {
       document.getElementById("iNuevo").style.visibility="hidden";
    }
          });

</script>
}