@model IEnumerable<WebAdminHecsa.Models.TblProveedorDirecciones>

@{
    ViewData["Title"] = "Crear Proveedores Direcciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">HECSA</li>
        <li class="breadcrumb-item">Información</li>
        <li class="breadcrumb-item">Proveedores</li>
        <li class="breadcrumb-item">Control Proveedores</li>
        <li class="breadcrumb-item active" aria-current="page">Crear Proveedores Direcciones</li>
    </ol>
</nav>
<p>
    <a id="iNuevo" type="submit" class="btn btn-outline-primary" asp-action="Create" value="Nuevo" title="Nuevo"><i class="fas fa-plus"></i> Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
          
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.TipoDireccionDesc)
            </th>

            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.NombreProveedor)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.IdEstatusRegistro)
            </th>
            <th style="text-align:center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.TipoDireccionDesc)
                </td>
              
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.NombreProveedor)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.FechaRegistro)
                </td>
                <td style="text-align:center">
                    @if (item.IdEstatusRegistro == 1)
                    {
                        <i class="fas fa-check" style="font-size: 1em; color: green;"></i>
                    }
                    else
                    {
                        <i class="fas fa-times" style="font-size: 1em; color: red;"></i>
                    }
                </td>
                <td style="text-align:center">
                    <a asp-action="Edit" asp-route-id="@item.IdProveedor" class="btn btn-warning" title="Editar"><i class="far fa-edit"></i></a>
                    <a asp-action="Details" asp-route-id="@item.IdProveedor" class="btn btn-info" title="Detalles"><i class="fas fa-toggle-off"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.IdProveedor" class="btn btn-danger" title="Desactivar"><i class="fas fa-toggle-off"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script type="text/javascript">
    $(document).ready(function() {
            var vEstatusFlag = '@ViewBag.EstatusFlag'
            var vEmpresaFlag = '@ViewBag.EmpresaFlag'
            var vProveedorFlag = '@ViewBag.ProveedorFlag'

          if (vEstatusFlag == 0)
          {
          document.getElementById("iNuevo").style.visibility="hidden";
          }
          else
          {
              if (vEmpresaFlag == 0)
              {
              document.getElementById("iNuevo").style.visibility="hidden";
              }
              else
              {
                  if (vProveedorFlag == 0)
                  {
                  document.getElementById("iNuevo").style.visibility="hidden";
                  }
                  else
                  {
                  document.getElementById("iNuevo").style.visibility="visible";
                  }
              }
          }
        });

</script>
}

