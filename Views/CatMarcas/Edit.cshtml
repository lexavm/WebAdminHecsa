@model WebAdminHecsa.Models.CatMarca

@{
    ViewData["Title"] = "Editar Género";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">HECSA</li>
        <li class="breadcrumb-item">Información</li>
        <li class="breadcrumb-item">Catálogos</li>
        <li class="breadcrumb-item">Marca</li>
        <li class="breadcrumb-item">Control de Marca</li>
        <li class="breadcrumb-item active" aria-current="page">Editar Marca</li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input style="text-transform:uppercase" type="hidden" asp-for="IdMarca" />
            <div class="form-group">
                <label asp-for="MarcaDesc" class="control-label"></label>
                <input style="text-transform:uppercase" asp-for="MarcaDesc" class="form-control" />
                <span asp-validation-for="MarcaDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdProveedor" class="control-label"></label>
                <input style="text-transform:uppercase" asp-for="IdProveedor" class="form-control" />
                <span asp-validation-for="IdProveedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProveedorDesc" class="control-label"></label>
                <input style="text-transform:uppercase" asp-for="ProveedorDesc" class="form-control" />
                <span asp-validation-for="ProveedorDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaRegistro" class="control-label"></label>
                <input style="text-transform:uppercase" asp-for="FechaRegistro" class="form-control" />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEstatusRegistro" class="control-label"></label>
                <input style="text-transform:uppercase" asp-for="IdEstatusRegistro" class="form-control" />
                <span asp-validation-for="IdEstatusRegistro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
